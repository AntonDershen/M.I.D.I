<Page
    x:Class="M.I.D.I.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:M.I.D.I"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid HorizontalAlignment="Left" Height="640" VerticalAlignment="Top" Width="191" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"/>
        <Grid HorizontalAlignment="Left" Height="640" VerticalAlignment="Top" Width="833" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Margin="191,0,0,0" BorderBrush="Gray" BorderThickness="1,0,0,0">
            <Button x:Name="Add" Content="Add" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="35" Width="135" Click="Add_Click"/>
            <Button x:Name="Sync" Content="Sync" HorizontalAlignment="Left" Margin="151,10,0,0" VerticalAlignment="Top"  Height="35" Width="135" Click="Sync_Click"/>
            <ListView x:Name="MusicFiles" HorizontalAlignment="Left" Height="580" VerticalAlignment="Top" Width="800" RenderTransformOrigin="0.448,1.728" Margin="11,50,0,0"/>
        </Grid>
    </Grid>
</Page>
